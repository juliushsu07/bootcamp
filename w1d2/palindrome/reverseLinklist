public Node reverseLinklist(Node head)
{
    if(head == null ) return null;
    Node n1 = null;
    Node n2 = head;
    Node n3 = head.next;

    return helper(n1, n2, n3);
}
}

public Node helper(Node n1, Node n2, Node n3){
    if(n3 == null) return n2;
    n2.next = n1;
    n3.next = n2;
    return helper(n2, n3, n3.next);
}








1 -> 2 -> 3 -> 4
3 -> 2 -> 1